<div class="row">
  <aside class="col-md-4">
    <div class="row">
      <section class="user_info col-md-12">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </div>
    <div class="row">
      <section>
        <div class="center col-md-4 col-xs-4">
          <%= link_to user_path do %>
            <div>Micropostes</div>
            <div><%= @user.microposts.count %></div>
          <% end %>
        </div>
        <div class="center col-md-4 col-xs-4">

            <div>Followings</div>
            <div><%= @user.following_users.count %></div>

        </div>
        <div class="center col-md-4 col-xs-4">
          <%= link_to followers_user_path do %>
            <div>Followers</div>
            <div><%= @user.follower_users.count %></div>
          <% end %>
        </div>
      </section>
    </div>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.following_users.any? %>
      <h3>Followings (<%= @user.following_users.count %>)</h3>
      <div class="row">
        <div class="col-md-3">
          
        </div>
      </div>
    <% end %>
  </div>
</div>
