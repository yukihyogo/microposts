<div class="row">
  <aside class="col-md-4">
    <%= render 'shared/user_aside_info' %>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.following_users.any? %>
      <h3>Followings (<%= @user.following_users.count %>)</h3>
      <ol class="followings container">
        <%= render partial: 'followings/following', collection: @followings %> 
      </ol>
    <% end %>
  </div>
</div>
