    <div class="row">
      <section class="user_info col-md-12">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </div>
    <div class="row">
      <section class="user_links">
        <div class="center col-md-4 col-xs-4">
          <%= link_to user_path do %>
            <div>Micropostes</div>
            <div><%= @user.microposts.count %></div>
          <% end %>
        </div>
        <div class="center col-md-4 col-xs-4">
          <%= link_to followings_user_path do %>
            <div>Followings</div>
            <div><%= @user.following_users.count %></div>
          <% end %>
        </div>
        <div class="center col-md-4 col-xs-4">
          <%= link_to followers_user_path do %>
            <div>Followers</div>
            <div><%= @user.follower_users.count %></div>
          <% end %>
        </div>
      </section>
    </div>
    <div class="row">
      <section class="user_profile">
        <div class="col-md-12">
          <%= @user.profile %>
        </div>
      </section>
    </div>