<li id="micropost-<%= micropost.id %>">
    <% if !micropost.Rt_id.nil? %>
        <div>
            Retweeted by <%= link_to micropost.user.name, micropost.user %>
            <% if current_user == micropost.user %>
                <%= link_to "[ delete ]", micropost, method: :delete, data: { confirm: "Are you sure to delete?" } %>
            <% end %>
        </div>
        <% micropost = Micropost.find_by(id: micropost.Rt_id) %>
        <% if micropost.nil? %>
            <div>--- Micropost has deleted. ---</div>
        <% end %>
    <% end %>

    <% if !micropost.nil? %>
        <%= link_to gravatar_for(micropost.user, size:50), micropost.user %>
        <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
        <span class="timestamp">
            Posted <%=time_ago_in_words(micropost.created_at) %> ago.
            <%= link_to "[ retweet ]", retweet_micropost_path(micropost), method: :post , data: { confirm: "Are you sure to retweet?" } %>
            <%= link_to "[ favorit ]", "#" %> 
            <% if current_user == micropost.user %>
                <%= link_to "[ delete ]", micropost, method: :delete, data: { confirm: "Are you sure to delete?" } %>
            <% end %>
        </span>
        <span class="content"><%= micropost.content %></span>
    <% end %>
</li>